{% for group in memberGroups %}
    {% if group.groupConfigurations is not empty %}
        <div id="memberGroup{{ group.id }}" class="col-md-4">
            <div class="card card-success card-outline">
                <div class="card-header">
                    <h3 class="card-title">{{ group.name }} - Mitglieder</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0" style="max-height:300px;overflow:auto;">
                    <ul class="products-list product-list-in-card pl-2 pr-2">
                        {% for config in group.groupConfigurations %}
                            <li class="item">
                                <div class="product-img">
                                    <a href="{{ path('profile_show', {'user': config.user.id}) }}"><img style="object-fit: cover;" src="{{ asset('storage/avatars/') ~ config.user.avatarFile|default('avatar-default-icon.png') }}" alt="Bearbeiter" height="50" class="img-size-50 img-circle"></a>
                                </div>
                                <div class="product-info">
                                    <a href="{{ path('profile_show', {'user': config.user.id }) }}" class="product-title">{{ config.user.fullname }}</a>
                                    <span class="product-description">{{ config.roleLabel }}</span>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- /.card -->
        </div>
    {% endif %}
{% endfor %}